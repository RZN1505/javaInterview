<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="entity.Student" table="student" catalog="interview">
        <id name="id" type="java.lang.Integer">
            <column name="id" />
            <generator class="identity" />
        </id>
        <property name="name" type="string">
            <column name="name" length="20" not-null="true" unique="true" />
        </property>
        <property name="mark" type="java.lang.Integer">
            <column name="mark" length="10" not-null="true" unique="true" />
        </property>
    </class>
</hibernate-mapping>